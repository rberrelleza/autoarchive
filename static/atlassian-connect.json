{{define "connect"}}{
    "key": "hiparchiver",
    "name": "Room Archiver",
    "description": "Automatically archive your rooms after 90 days of inactivity",
    "vendor": {
        "name": "Ramiro Berrelleza",
        "url": "http://ramiroberrelleza.com"
    },
    "links": {
        "self": "{{.LocalBaseUrl}}/atlassian-connect.json",
        "homepage": "{{.LocalBaseUrl}}/atlassian-connect.json"
    },
    "capabilities": {
        "hipchatApiConsumer": {
            "scopes": [
                "view_group",
                "manage_rooms",
                "admin_room",
                "send_notification"
            ],
            "avatar": {
              "url": "https://s3.amazonaws.com/uploads.hipchat.com/167300/1202992/Xv8F9Cf7pGRemNI/archiver.png",
              "url@2x": "https://s3.amazonaws.com/uploads.hipchat.com/167300/1202992/Xv8F9Cf7pGRemNI/archiver.png"
            }
        },
        "installable": {
            "allowGlobal": true,
            "allowRoom": false,
            "callbackUrl": "{{.LocalBaseUrl}}/installable"
        },
        "configurable": {
            "url": "{{.LocalBaseUrl}}/configurable"
        }

    }
}
{{end}}
